<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:layout_editor_absoluteX="231dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/bca"
                android:text="clear" />

            <TextView
                style="@style/abc"
                android:text="7" />

            <TextView
                style="@style/abc"
                android:text="4" />

            <TextView
                style="@style/abc"
                android:text="1" />

            <TextView
                style="@style/abc"
                android:text="." />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/bca"
                android:text="(" />

            <TextView
                style="@style/abc"
                android:text="8" />

            <TextView
                style="@style/abc"
                android:text="5" />

            <TextView
                style="@style/abc"
                android:text="2" />

            <TextView
                style="@style/abc"
                android:text="0" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/bca"
                android:text=")" />

            <TextView
                style="@style/abc"
                android:text="9" />

            <TextView
                style="@style/abc"
                android:text="6" />

            <TextView
                style="@style/abc"
                android:text="3" />

            <TextView
                style="@style/abc"
                android:text="back" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/bca"
                android:text="+" />

            <TextView
                style="@style/bca"
                android:text="-" />

            <TextView
                style="@style/bca"
                android:text="x" />

            <TextView
                style="@style/bca"
                android:text="/" />

            <TextView
                style="@style/bca"
                android:text="=" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>